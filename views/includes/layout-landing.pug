doctype html
html
  head
    meta(charset='utf-8')
    meta(content='IE=edge', http-equiv='X-UA-Compatible')
    meta(content='width=device-width,initial-scale=1', name='viewport')
    title= title
    link(rel="shortcut icon", href="/favicon.ico")
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/fontawesome-all.min.css')
    link(rel='stylesheet', href='/css/landing-page.css')
    script(src='/js/jquery-3.3.1.min.js')
    script(src='/js/popper.min.js')
    script(src='/js/bootstrap.min.js')
    
  body
    // Navigation
    nav.navbar.fixed-top.navbar-expand-lg.navbar-light.navbar-default.topnav(role="navigation")
      div.container
        // Brand and toggle get grouped for better mobile display
        a.navbar-brand.topnav(href="/") #{title}
        button.navbar-toggler(type="button", data-toggle="collapse", data-target="#bs-navbarText", aria-controls="bs-navbarText", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
          
        // Collect the nav links, forms, and other content for toggling
        div#bs-navbarText.collapse.navbar-collapse
          ul.navbar-nav.ml-md-auto
            li.nav-item
              a(href="#about") About
            li.nav-item
              a(href="#services") Services
            li.nav-item
              a(href="#contact") Contact
            li.nav-item
              if login
                a(href="./logout") Logout
              else
                a(href="./login") Login
    block content
